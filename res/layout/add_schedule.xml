<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fefefe"
    android:orientation="vertical" >
	<FrameLayout
		android:layout_width="match_parent"
		android:layout_height="48dp"
		android:background="@color/yc_color">
		<ImageView
   		    android:id="@+id/bar_image_return"
   		    android:layout_width="32dp"
   		    android:layout_height="32dp"
   		    android:layout_marginTop="8dp"
   		    android:layout_marginLeft="6dp"
   		    android:layout_gravity="left"
   		    android:background="@drawable/bar_bt_bg"
   		    android:src="@drawable/btn_back" />
   		<TextView
   		    android:id="@+id/bar_title"
   		    android:layout_width="wrap_content"
   		    android:layout_height="48dp"
   		    android:textColor="#ffffff"
   		    android:textSize="18dp"
   		    android:gravity="center_vertical"
   		    android:layout_gravity="center_horizontal"
   		    android:text="添加日程" />

   		<ImageView
   		    android:id="@+id/bar_image_add"
   		    android:layout_width="38dp"
   		    android:layout_height="38dp"
   		    android:layout_marginTop="5dp"
   		    android:layout_marginRight="10dp"
   		    android:layout_gravity="right"
   		    android:background="@drawable/bar_bt_bg"
   		    android:src="@drawable/tab_yes" />
   	</FrameLayout>
    <EditText
        android:id="@+id/schedule"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_edittext_addfriend"
        android:gravity="top"
        android:maxLines="8"
        android:minLines="8"
        android:padding="5dp"
        android:hint="请输入日程…" />
        <LinearLayout 
	    android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_marginLeft="20dp"
    	android:layout_marginRight="20dp"
    	android:orientation="horizontal" >
	    <TextView
        	android:id="@+id/chooseDate"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:background="@drawable/bg_textview"
        	android:gravity="left"
        	android:layout_marginTop="10dp"
        	android:textColor="#CC9966"
        	android:text="时间" />

		<TextView
		    android:id="@+id/show_date"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:gravity="left"
		    android:text="2015-03-07 14:08"
		    android:layout_marginLeft="5dp"
		    android:layout_marginTop="10dp"
		    android:textColor="#00CCCC" />

		<RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp" >
    		<CheckBox
        		android:id="@+id/openRead"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:layout_alignParentRight="true"
        		android:textColor="#CC9966"
        		android:text="私密" />
    	</RelativeLayout>
    	
	</LinearLayout>
    <RelativeLayout
    	android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="5dp" >
    	<CheckBox
        	android:id="@+id/alarm"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_alignParentLeft="true"
        	android:textColor="#CC9999"
        	android:checked="true"
        	android:text="开启通知提醒" />
    </RelativeLayout>    
	
    
    <!-- <Button
        android:id="@+id/addScheduleBtn"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
    	android:layout_marginRight="20dp"
        android:background="@drawable/bt_bgd"
        android:text="添 加 日 程"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
         /> -->

</LinearLayout>
