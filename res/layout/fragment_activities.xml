<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cccccc"
    android:descendantFocusability="beforeDescendants"
    tools:context="${relativePackage}.${activityClass}" >
    <FrameLayout
		android:layout_width="match_parent"
		android:layout_height="48dp"
		android:background="@color/yc_color">
		<ImageView
   		    android:id="@+id/bar_tab"
   		    android:layout_width="32dp"
   		    android:layout_height="32dp"
   		    android:layout_marginTop="8dp"
   		    android:layout_marginLeft="13dp"
   		    android:layout_gravity="left"
   		    android:background="@drawable/bar_bt_bg"
   		    android:src="@drawable/tab_flag" />
		<TextView
   		    android:id="@+id/bar_tab_text"
   		    android:layout_width="wrap_content"
   		    android:layout_height="48dp"
   		    android:layout_marginLeft="42dp"
   		    android:textColor="#ffffff"
   		    android:textSize="14dp"
   		    android:gravity="center"
   		    android:text="全部" />
   		<TextView
   		    android:id="@+id/bar_title_activities"
   		    android:layout_width="wrap_content"
   		    android:layout_height="48dp"
   		    android:textColor="#ffffff"
   		    android:textSize="18dp"
   		    android:gravity="center"
   		    android:layout_gravity="center_horizontal"
   		    android:text="活动" />
   		<ImageView
   		    android:id="@+id/activities_bar_search"
   		    android:layout_width="28dp"
   		    android:layout_height="28dp"
   		    android:layout_marginTop="10dp"
   		    android:layout_marginRight="63dp"
   		    android:layout_gravity="right"
   		    android:background="@drawable/bar_bt_bg"
   		    android:src="@drawable/tab_search" />
   		<ImageView
   		    android:id="@+id/bar_image_add"
   		    android:layout_width="32dp"
   		    android:layout_height="32dp"
   		    android:layout_marginTop="8dp"
   		    android:layout_marginRight="13dp"
   		    android:layout_gravity="right"
   		    android:background="@drawable/bar_bt_bg"
   		    android:src="@drawable/tab_add" />
   	</FrameLayout>
    <com.rcgl.refresh.view.PullToRefreshView
        android:id="@+id/pull_to_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="48dp" >
    <ListView
        android:id="@+id/activity_listview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#ececec"
        android:cacheColorHint="#00000000"
        android:footerDividersEnabled="false"
        android:headerDividersEnabled="false"
        android:divider="#55CCCCCC"
        android:dividerHeight="0px"
        android:scrollbars="none" />
    
    </com.rcgl.refresh.view.PullToRefreshView>
    
    <LinearLayout 
        android:id="@+id/sort_tab"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginTop="48dp"
        android:background="#eeeeee"
        android:visibility="gone"
        android:orientation="horizontal">
        <TextView 
            android:id="@+id/tab_all"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
			android:gravity="center_horizontal|center_vertical"
			android:layout_weight="1"
            android:textSize="18dp"
            android:textColor="#ffffff"
            android:background="#FF6666"
            android:text="全部"/>
        <TextView 
            android:id="@+id/tab_sport"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
			android:gravity="center_horizontal|center_vertical"
			android:layout_weight="1"
            android:textSize="18dp"
            android:textColor="#ffffff"
            android:background="#FF9933"
            android:text="运动"/>
        <TextView 
            android:id="@+id/tab_travel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
			android:gravity="center_horizontal|center_vertical"
			android:layout_weight="1"
            android:textSize="18dp"
            android:textColor="#ffffff"
            android:background="#99CC99"
            android:text="旅行"/>
        <TextView 
            android:id="@+id/tab_study"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
			android:gravity="center_horizontal|center_vertical"
			android:layout_weight="1"
            android:textSize="18dp"
            android:textColor="#ffffff"
            android:background="#FFCC66"
            android:text="学习"/>
        <TextView 
            android:id="@+id/tab_casual"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
			android:gravity="center_horizontal|center_vertical"
			android:layout_weight="1"
            android:textSize="18dp"
            android:textColor="#ffffff"
            android:background="#66CCCC"
            android:text="休闲"/>
    </LinearLayout>
	<FrameLayout 
        android:id="@+id/search_item"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="48dp"
        android:background="#eeeeee"
        android:visibility="gone"
        android:orientation="horizontal">
    	<EditText 
        	android:id="@+id/search_text"
        	android:layout_width="match_parent"
        	android:layout_height="match_parent"
        	android:background="@drawable/bg_edittext"
        	android:layout_marginTop="6dp"
        	android:layout_marginBottom="6dp"
        	android:layout_marginLeft="10dp"
        	android:layout_marginRight="10dp"
        	android:padding="5dp"
        	android:hint="请输入活动关键字" />
		<ImageView
	    	android:id="@+id/search_clear"
			android:layout_width="30dp"
			android:layout_height="30dp"
			android:layout_marginRight="10dp"
			android:layout_gravity="center_vertical|right"
			android:textColor="#ffffff"
			android:src="@drawable/delete"
			android:visibility="gone" />
	</FrameLayout>
</RelativeLayout>