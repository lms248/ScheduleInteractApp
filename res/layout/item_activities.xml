<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ececec" >

    <LinearLayout 
        android:id="@+id/linearLayout_item"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
      	android:orientation="horizontal"
      	android:layout_marginTop="6dp"
      	android:layout_marginLeft="8dp"
      	android:layout_marginRight="8dp"
      	android:background="#ffffff" >
    	 
        

    	<LinearLayout
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:orientation="vertical"
        	android:textAlignment="center" >
        	<LinearLayout
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:orientation="horizontal"
        		android:layout_marginTop="8dp"
        		android:gravity="center_vertical" >
				<ImageView
            		android:id="@+id/userPhoto"
            		android:layout_width="38dp"
            		android:layout_height="38dp" 
            		android:src="@drawable/default_photo"
            		android:layout_marginLeft="10dp" />
        		<TextView
    		    	android:id="@+id/username"
    		    	android:layout_width="wrap_content"
    		    	android:layout_height="wrap_content"
    		    	android:layout_marginLeft="8dp"
    		    	android:layout_marginRight="10dp"
    		    	android:textColor="#999999"
    		    	android:text="小橙子" />
        			<LinearLayout
        				android:layout_width="match_parent"
        				android:layout_height="wrap_content"
        				android:orientation="horizontal"
        				android:textAlignment="center" >
    					<TextView
    		    		android:id="@+id/max_mumber_people"
    		    		android:layout_width="wrap_content"
    		    		android:layout_height="wrap_content"
    		    		android:layout_marginTop="5dp"
    		    		android:layout_marginBottom="5dp"
    		    		android:layout_marginLeft="10dp"
    		   	 		android:layout_marginRight="5dp"
    		    		android:textColor="#999999"
    		    		android:textSize="10dp"
    		    		android:text="限制：5人" />
    					<TextView
    		    		android:id="@+id/activities_split"
    		    		android:layout_width="wrap_content"
    		    		android:layout_height="wrap_content"
    		    		android:layout_marginTop="5dp"
    		    		android:textColor="#66CCCC"
    		    		android:text="|" />
    					<TextView
    		    		android:id="@+id/already_mumber_people"
    		    		android:layout_width="wrap_content"
    		    		android:layout_height="wrap_content"
    		    		android:layout_marginTop="5dp"
    		    		android:layout_marginBottom="5dp"
    		    		android:layout_marginLeft="5dp"
    		    		android:layout_marginRight="8dp"
    		    		android:textColor="#CC9999"
    		    		android:textSize="10dp"
    		    		android:text="已报：3人" />
    					<ImageView 
		    			android:id="@+id/tab_yue"
            			android:layout_width="30dp"
            			android:layout_height="30dp"
						android:layout_marginTop="2dp"
						android:layout_marginRight="5dp"
						android:visibility="gone"
						android:src="@drawable/woyue" />
    					<ImageView 
		    			android:id="@+id/tab_collect"
            			android:layout_width="30dp"
            			android:layout_height="30dp"
						android:layout_marginTop="2dp"
						android:layout_marginRight="5dp"
						android:visibility="gone"
						android:src="@drawable/ic_action_favorite_select" />
    				</LinearLayout>
    		</LinearLayout>
			<LinearLayout
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:orientation="horizontal"
        		android:layout_marginTop="3dp"
        		android:layout_marginBottom="10dp"
        		android:gravity="center_vertical" >
        		<ImageView
        		android:id="@+id/image"
        		android:layout_width="120dp"
        		android:layout_height="90dp"
        		android:layout_marginTop="3dp"
        		android:layout_marginLeft="8dp"
        		android:visibility="visible"
        		android:scaleType="fitXY"
        		android:src="@drawable/loading_4x3" />
        		<LinearLayout
        			android:layout_width="wrap_content"
        			android:layout_height="wrap_content"
        			android:orientation="vertical" >
        			<TextView
    		    	android:id="@+id/activities_content"
    		    	android:layout_width="wrap_content"
    		    	android:layout_height="wrap_content"
    		    	android:layout_marginLeft="8dp"
    		    	android:layout_marginRight="5dp"
    		    	android:layout_marginBottom="2dp"
    		    	android:textSize="16dp"
    		    	android:text="啦啦啦，组队一起玩耍吧！"
    		    	android:textColor="#33CCCC" />
        			
        			<LinearLayout 
    		   		android:layout_width="wrap_content"
    		    	android:layout_height="wrap_content"
    		    	android:orientation="horizontal">
    		    <TextView
    		    	android:id="@+id/activities_address"
    		    	android:layout_width="wrap_content"
    		    	android:layout_height="wrap_content"
    		    	android:layout_marginLeft="8dp"
    		    	android:layout_marginRight="10dp"
    		    	android:layout_marginTop="5dp"
    		    	android:textColor="#999999"
    		    	android:text="广州" />
    		    <TextView
    		    	android:id="@+id/activities_split_1"
    		    	android:layout_width="wrap_content"
    		    	android:layout_height="wrap_content"
    		    	android:layout_marginTop="5dp"
    		    	android:textColor="#66CCCC"
    		    	android:text="|" />
    		    <ImageView
            		android:id="@+id/activities_clock"
            		android:layout_width="18dp"
            		android:layout_height="18dp" 
            		android:src="@drawable/activities_clock"
            		android:visibility="gone"
            		android:layout_marginLeft="8dp"
            		android:layout_marginTop="5dp"
            		android:layout_marginBottom="8dp" />
    		    <TextView
    		    	android:id="@+id/activities_time"
    		    	android:layout_width="wrap_content"
    		    	android:layout_height="wrap_content"
    		    	android:layout_marginLeft="5dp"
    		    	android:layout_marginRight="10dp"
    		    	android:layout_marginTop="5dp"
    		    	android:textColor="#CC9999"
    		    	android:text="2015-03-07 15:07" />
    		</LinearLayout>
        			
        			
        		</LinearLayout>
        	</LinearLayout>
    	</LinearLayout>
    	
    </LinearLayout>
	<RelativeLayout 
   		android:layout_width="fill_parent"
    	android:layout_height="fill_parent"
    	android:gravity="right|top">
		<TextView 
		    android:id="@+id/tab_sort"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
			android:gravity="center_horizontal|center_vertical"
			android:layout_marginTop="5dp"
			android:layout_marginRight="13dp"
			android:padding="2dp"
            android:textSize="12dp"
            android:textColor="#ffffff"
            android:background="#66CCCC"
            android:text="休闲"/>
    </RelativeLayout>
    
