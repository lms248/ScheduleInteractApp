<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle" >
    	<corners android:radius="6dp" />
    	<stroke
        	android:width="1dp"
        	android:color="#6695A895"/>
		<padding 
	    	android:left="3dp"
	    	android:right="3dp"
	    	android:top="0dp"
	    	android:bottom="0dp"/>
    	<solid android:color="#FFCCCC"/>
		</shape>
    </item>
    <item>
        <shape android:shape="rectangle" >
    	<corners android:radius="6dp" />
    	<stroke
        	android:width="1dp"
        	android:color="#6695A895"/>
		<padding 
	    	android:left="3dp"
	    	android:right="3dp"
	    	android:top="0dp"
	    	android:bottom="0dp"/>
    	<solid android:color="#00ffffff"/>
		</shape>
    </item>
</selector>


