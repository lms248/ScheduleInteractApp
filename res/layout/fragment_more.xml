<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#AACCCCCC" >

    <LinearLayout
        android:id="@+id/linearLayout_user"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"
        android:background="#CCFFFFFF"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/image_user"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="15dp"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/default_photo" />
		<LinearLayout
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_gravity="center"
        	android:orientation="vertical" >
        	<TextView
            	android:id="@+id/tv_nickname"
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:textSize="18dp"
            	android:text="未设置昵称" />
        	<TextView
            	android:id="@+id/tv_username"
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:layout_marginTop="5dp"
            	android:textSize="12dp"
            	android:textColor="#66CCCC"
            	android:text="账号：未登录" />
		</LinearLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/exit_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center"
                android:layout_marginRight="20dp"
                android:background="@drawable/bg_textview"
                android:clickable="true"
                android:focusable="true"
                android:text="注销登录" />
        </FrameLayout>
    </LinearLayout>
	
    <LinearLayout
        android:id="@+id/linearLayout_message"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/more_item_bg"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_message"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="10dp"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/ic_more_message" />

        <TextView
            android:id="@+id/tv_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_gravity="center"
            android:textSize="18dp"
            android:text="消 息" />

    </LinearLayout>
	
    <LinearLayout
        android:id="@+id/linearLayout_socket"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginTop="173dp"
        android:background="@drawable/more_item_bg"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_socket"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="10dp"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/ic_more_chat" />

        <TextView
            android:id="@+id/tv_socket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_gravity="center"
            android:textSize="18dp"
            android:text="友 聊" />

    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/linearLayout_location"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginTop="245dp"
        android:background="@drawable/more_item_bg"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_location"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="10dp"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/ic_more_nearby" />

        <TextView
            android:id="@+id/tv_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_gravity="center"
            android:textSize="18dp"
            android:text="附近的人" />

    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/linearLayout_delete_cache"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_marginTop="298dp"
        android:background="@drawable/more_item_bg"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_delete_cache"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="10dp"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/ic_more_clear" />

        <TextView
            android:id="@+id/tv_delete_cache"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_gravity="center"
            android:textSize="18dp"
            android:text="清除缓存" />

    </LinearLayout>
    
